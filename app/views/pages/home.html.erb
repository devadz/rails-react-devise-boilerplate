<div class="col-md-10 col-md-offset-1">
  <h1><i class="fa fa-thumbs-o-up fa-2x" aria-hidden="true"></i><br />
  <small>Congrats, you successfully installed rails-react-devise-boilerplate!</small></h1>

  <hr />

  <% if user_signed_in? %>
    <h4>You are signed in as: <%= link_to current_user.username, current_user %></h4>
    <div style="margin-top:50px;">
      <%= react_component('IpLookup', {}, { prerender: true }) %>
    </div>
  <% else %>
    <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary' %>
    <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-default' %>
  <% end %>
</div>
